<?xml version="1.0" encoding="UTF-8"?>
<policy>
    <general>
        <name>%SS_UPDATE_POLICY_NAME%</name>
        <enabled>true</enabled>
        <frequency>Ongoing</frequency>
        <category>
            <name>%SS_UPDATE_POLICY_CATEGORY%</name>
        </category>
    </general>
    <scope>
        <computers/>
        <computer_groups>
            <computer_group>
                <name>%OUT_OF_DATE_SCOPE_GROUP_NAME%</name>
            </computer_group>
        </computer_groups>
    </scope>
    <self_service>
        <use_for_self_service>true</use_for_self_service>
        <self_service_display_name>%NAME%</self_service_display_name>
        <install_button_text>Update</install_button_text>
        <reinstall_button_text>Update</reinstall_button_text>
        <self_service_description>%DESCRIPTION%</self_service_description>
        <self_service_icon>
            <id>%ICON_ID%</id>
            <uri>%ICON_URI%</uri>
        </self_service_icon>
    </self_service>
    <package_configuration>
        <packages>
            <size>0</size>
        </packages>
    </package_configuration>
    <scripts>
        <size>3</size>
        <script>
            <name>00_Prepare_SwiftDialog.sh</name>
            <priority>Before</priority>
            <parameter4>%INSTALLOMATOR_DIALOG%</parameter4>
            <parameter5>Updating %NAME%...</parameter5>
            <parameter6>%ICON_URI%</parameter6>
            <parameter7/>
            <parameter8/>
            <parameter9/>
            <parameter10/>
            <parameter11/>
        </script>
        <script>
            <name>Policy run with Trigger</name>
            <priority>Before</priority>
            <parameter4>%INSTALL_TRIGGER%</parameter4>
            <parameter5>false</parameter5>
            <parameter6/>
            <parameter7/>
            <parameter8/>
            <parameter9/>
            <parameter10/>
            <parameter11/>
        </script>
        <script>
            <name>zz_Quit_SwiftDialog.sh</name>
            <priority>After</priority>
            <parameter4>%INSTALLOMATOR_DIALOG%</parameter4>
            <parameter5/>
            <parameter6/>
            <parameter7/>
            <parameter8/>
            <parameter9/>
            <parameter10/>
            <parameter11/>
        </script>
    </scripts>
    <maintenance>
        <recon>true</recon>
    </maintenance>
</policy>
